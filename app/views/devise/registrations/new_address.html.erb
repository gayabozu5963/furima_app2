<h2>会員情報入力</h2>

<%= form_with model: @address, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: @address %>

  <div class="field">
    <%= f.label :address_family_name, "送付先氏名" %>必須<br />
    <%= f.text_field :address_family_name, placeholder: "例) 鈴木" %>
    <%= f.text_field :address_first_name, placeholder: "例) 一郎"%>
  </div>

  <div class="field">
    <%= f.label :address_family_name_kana, "送付先氏名(カナ)" %>必須<br />
    <%= f.text_field :address_family_name_kana, placeholder: "例) スズキ" %>
    <%= f.text_field :address_first_name_kana, placeholder: "例) イチロウ" %>
  </div>

  <div class="field">
    <%= f.label :post_code, "郵便番号" %>必須<br />
    <%= f.text_field :post_code, autofocus: true, placeholder: "例) 810-0801" %>
  </div>

  <div class="field">
    <%= f.label :prefecture, "都道府県" %>必須<br />
    <%= f.text_field :prefecture, autofocus: true, placeholder: "例) 福岡県" %>
  </div>

  <div class="field">
    <%= f.label :municipality, "市町村" %>必須<br />
    <%= f.text_field :municipality, autofocus: true, placeholder: "例) 福岡市" %>
  </div>

  <div class="field">
    <%= f.label :house_number, "番地" %>必須<br />
    <%= f.text_field :house_number, autofocus: true, placeholder: "例) 中洲4丁目6-12" %>
  </div>

  <div class="field">
    <%= f.label :building_name, "建物名" %><br />
    <%= f.text_field :building_name, autofocus: true, placeholder: "例) プラート中洲 8F" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号" %><br />
    <%= f.text_field :phone_number, autofocus: true, placeholder: "例) 090-XXXX-XXXX" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
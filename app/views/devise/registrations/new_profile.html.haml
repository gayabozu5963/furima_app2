.signup-content
  .signup-main
    %h2 会員情報入力
    = form_with model: @profile, local: true do |f|
      = render "devise/shared/error_messages", resource: @profile
      .text-form
        .field
          = f.label :family_name, "お名前"
          %span.form__require 必須
          %br/
          = f.text_field :family_name, placeholder: "例) 鈴木",class: 'text-form__input'
          = f.text_field :first_name, placeholder: "例) 一郎",class: 'text-form__input'
        .field
          = f.label :family_name_kana, "お名前(カナ)"
          %span.form__require 必須
          %br/
          = f.text_field :family_name_kana, placeholder: "例) スズキ",class: 'text-form__input'
          = f.text_field :first_name_kana, placeholder: "例) イチロウ",class: 'text-form__input'
        .field
          = f.label :birth_day, "生年月日",class: 'text-form__input'
          %span.form__require 必須
          %br/
          = f.date_select :birth_day, { use_month_numbers:true, prompt:"--", end_year:1900}
        .actions
          = f.submit "次へ",class: 'next-btn'

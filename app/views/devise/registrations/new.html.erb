<h2>会員情報入力</h2>

<%= form_for(@user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :name, "ニックネーム" %>必須<br />
    <%= f.text_field :name, autofocus: true, placeholder: "例) フリマ太朗" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>必須<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>必須<br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字 7文字以上" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>必須<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数字 7文字以上" %>
  </div>

  <div class="actions">
    <%= f.submit "次へ" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

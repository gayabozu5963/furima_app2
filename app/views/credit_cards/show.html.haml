.mypage
  = render "users/mypage-nav"
  .mypage-main
    .mypage-main__payment
      .mypage-title
        支払い方法
      .payment-box
        .payment-contents
          .card-content
            .card-content__information
              .info-word
                クレジットカード
              .info-content
                .info-content__number
                  = "**** **** **** " + @default_card_information.last4
                .info-content__deadline
                  .deadline-word
                    有効期限
                  .deadline-date
                    = @exp_month + " / " + @exp_year
                .info-content__brand
                  = image_tag asset_path("card/#{@card_src}"), alt: @card_brand
            .card-content__delete
              = link_to credit_card_path, method: :delete, class: "delete-word" do
                削除する
          = link_to new_credit_card_path, class: "card-register" do
            %i.fas.fa-plus-circle.card-register__icon
            .card-register__word
              新規カードを登録する
        .payment-help
          = link_to "#", class: "payment-help__box" do
            .payment-way
              支払い方法について
            %i.fas.fa-angle-right.payment-icon